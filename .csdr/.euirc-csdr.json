{
    "name": "CSDR",
    "paths": {
        "packages": "packages",
        "nodeModules": "node_modules"
    },
    "npm": {
        "registry": {
            "install": "https://registry.npmjs.org"
        },
        "fixedDependencies": {
            "@eui/tools": "3.0.0-next.4"
        },
        "defaultDependencies": {
            "@eui/deps-base": "^7.0.0"
        }
    },
    "sonar": {
        "host": "https://sonar.ecdevops.eu"
    },
    "devopsMetadata": {
        "repository": "github.com/ec-europa-eui/csdr-devops-metadata.git",
        "folder": "packages/devops-metadata"
    },
    "projects": {
        "api-manager": {
            "name": "api-manager",
            "folder": "apps/api-manager",
            "repository" : "github.com/ec-europa-eui/csdr-app-api-manager.git",
            "packages": [
                "apimgr-shared-ui",
                "apimgr-nestjs-backend"
            ],
            "build": {
                "skipLint": true,
                "skipTest": true,
                "maxSpaceSize": true,
                "baseHref": "/api-manager/"
            }
        }
    }
}
